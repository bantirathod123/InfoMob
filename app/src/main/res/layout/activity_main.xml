    <ImageView
        android:id="@+id/secquraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/secquraise" />

    <TextView
        android:id="@+id/timestampValue"
        android:layout_width="397dp"
        android:layout_height="50dp"
        android:layout_below="@+id/secquraise"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/captureCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timestampValue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="Capture Count:"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/captureCountValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/captureCountLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/frequencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency (min):"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@+id/captureCountLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:clickable="true"
        android:layout_marginTop="48dp"/>


    <EditText
        android:id="@+id/frequencyValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/frequencyLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/frequencyLabel"
        android:gravity="end"
        android:inputType="number"
        android:text=""
        android:textColor="@color/green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/connectivityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet Connectivity:"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@+id/frequencyLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"/>



    <TextView
        android:id="@+id/connectivityValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/connectivityLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/batteryChargingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Charging:"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@+id/connectivityLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"/>



    <TextView
        android:id="@+id/batteryChargingValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/batteryChargingLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="33dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/batteryChargeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Charge (%):"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@+id/batteryChargingLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"/>


    <TextView
        android:id="@+id/batteryChargeValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/batteryChargeLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:gravity="end"
        android:text=""
        android:textColor="@color/green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/locationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location (Lat, Lon):"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_below="@+id/batteryChargeLabel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"/>


    <TextView
        android:id="@+id/latitudeValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/locationValue"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="0dp"

        android:layout_marginEnd="33dp"
        android:layout_toEndOf="@+id/locationValue"
        android:gravity="end"
        android:text=""
        android:textColor="@color/green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/longitudeValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitudeValue"
        android:layout_alignStart="@+id/latitudeValue"
        android:layout_alignEnd="@+id/latitudeValue"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:gravity="end"
        android:textColor="@color/green"
        android:textSize="16sp" />

    <Button
        android:id="@+id/manualRefreshButton"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:text="Manual Data Refresh"
        android:textColor="@color/white"
        android:backgroundTint="@color/requireColor"
        android:textSize="16sp" />

</RelativeLayout>
